version: '2'
services:
 flink-master:
   image: flink-master
   hostname: flink-master
   container_name: flink-master
   network_mode: host
   ports:
     - "8080:8080"
     - "8081:8081"

 flink-worker:
   image: flink-worker
   hostname: flink-worker
   container_name: flink-worker
   network_mode: host
   environment:
     - FLINK_MASTER_PORT_6123_TCP_ADDR=flink-master
#     - FLINK_NUM_TASK_SLOTS=2
     - JOB_MANAGER_RPC_ADDRESS=localhost
   depends_on:
      - flink-master

